
<%= @post.title %>
<br>
<%= @post.content %>
<br>


<h3> Categories </h3>
<ul>
<% @post.categories.each do |category| %>
    <li><%= link_to(category.name, category)%></li>
<% end %>
</ul>

<br>

<h3> Comments </h3>
<ul>
<% @post.comments.each do |comment| %>
    <li><% if comment.user %> <%= comment.user.username %> says: <%= comment.content %><%end%></li>
<% end %>
</ul>

<br>

<h3> Unique Users </h3>
<ul> 
<%= @post.users.uniq.each do |user| %>  
   <li> <%= link_to user.username, user %> </li>
<% end %>
</ul>

<br>

<h3> New Comment </h3>

<%= form_for @post.comments.build do |f| %>
    <%= f.hidden_field :post_id, value: @post.id %>
    Leave a Comment: <%= f.text_area :content %><br>

    Select User:
    <%= f.collection_select :user_id, User.all, :id, :username, include_blank: " "%>
    <br>
    <br>
    Or Create a User:
        <%= fields_for :user, @post.users.build do |user_fields| %>
            <%= user_fields.text_field :username %>
        <% end %>
    <%= f.submit %>
<% end %>
