<%= form_for @post do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>

    <%= f.label :content %>
    <%= f.text_area :content %>
    <br>

    <%= f.label :catergoies %>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
    <br>

    <%= f.fields_for :categories, @post.categories.build do |c| %>
        
        <%= c.label :new_category %>
        <%= c.text_field :name %>

    <% end %>
    <br>

    <%= f.submit %>

<% end %>